mixin social-share(post)
  .row&attributes(attributes)
    - var url = metadata.url+filters.url(post.url)
    - var title = encodeURIComponent(post.title)
    .col
      a.link-bw(href=`https://www.facebook.com/sharer/sharer.php?u=${url}` title="External Link - Share on Facebook" style="color:#1877F2;" target="_blank" rel="noopener noreferrer")
        i.bi-facebook.fs-4
    .col
      a.link-bw(href=`https://twitter.com/intent/tweet?source=webclient&text=${title}+${url}` title="External Link - Share on X - Twitter" style="color:#000000;" target="_blank" rel="noopener noreferrer")
        i.bi-twitter-x.fs-4
    .col
      a.link-bw(href=`https://www.reddit.com/submit?url=${url}` title="External Link - Share on Reddit" style="color:#FF5700;" target="_blank" rel="noopener noreferrer")
        i.bi-reddit.fs-4
    .col
      a.link-bw(href=`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${title}&source=${metadata.url}` title="External Link - Share on LinkedIn" style="color:#0A66C2;" target="_blank" rel="noopener noreferrer")
        i.bi-linkedin.fs-4
    .col
      a.link-bw.share-menu-url(href=url title=`Share: ${post.title}` style="color:#000000;" target="_blank" rel="noopener noreferrer")
        i.bi-box-arrow-up.fs-4
