mixin hero-1(section)
  section.block-hero-1&attributes(attributes)
    .container.text-center.p-5
      if section.h1
        h1.text-white.m-0 !{section.h1 || ""}
      if section.h2
        h2.fs-1.text-white.m-0 !{section.h2 || ""}

mixin hero-2(section)
  section.block-hero-2&attributes(attributes)
    .container.py-5
      .row.d-flex.align-items-center
        .col-sm-12.col-md-6.p-3
          if section.h1
            h1.text-white !{section.h1 || ""}
          if section.h2
            h2.fs-1.text-white !{section.h2 || ""}
          .text-white !{section.content || ""}
        .col-sm-12.col-md-6.p-3.text-center
          if section.image
            | !{filters.image(filters.url(section.image), section.imageAlt )}
          if section.video
            video.ratio.ratio-16x9.p-0.mt-4(autoplay, playsinline, loop, muted, poster=section.video.poster, fetchpriority="high", style="font-size:0px!important")
              each el in section.video.src
                - filetype = el.split(".").slice(-1)[0];
                if filetype == "vtt"
                  track(src=el, kind="captions" srclang="en" label="english_captions")
                else
                  source(src=el, type="video/"+filetype)
              | Your browser does not support the video tag.
          if section.imageSubtitle
            .small.text-white.fw-lighter.text-end !{section.imageSubtitle}

